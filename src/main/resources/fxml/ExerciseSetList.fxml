<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.Double?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="5"
    fx:id="root"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.mycompany.controllers.ExerciseSetListController">
    <padding>
        <Insets top="5" bottom="5" left="5" right="5" />
    </padding>
    <children>
        <Label fx:id="exerciseInfoNameLabel" />
        
        <ListView fx:id="exerciseSetListView" VBox.vgrow="ALWAYS"/>
        
        <VBox spacing="5">
            <children>
                <HBox spacing="5">
                    <children>
                        <Button text="New" onAction="#newExerciseSet" HBox.hgrow="ALWAYS">
                            <maxWidth>
                                <Double fx:constant="MAX_VALUE" />
                            </maxWidth>
                        </Button>
                        <Button text="Edit" onAction="#editExerciseSet" fx:id="editButton" HBox.hgrow="ALWAYS">
                            <maxWidth>
                                <Double fx:constant="MAX_VALUE" />
                            </maxWidth>
                        </Button>
                        <Button text="History" onAction="#showExerciseHistory" fx:id="historyButton" HBox.hgrow="ALWAYS">
                            <maxWidth>
                                <Double fx:constant="MAX_VALUE" />
                            </maxWidth>
                        </Button>
                        <Button text="Remove" onAction="#removeExerciseSet" fx:id="removeButton" HBox.hgrow="ALWAYS">
                            <maxWidth>
                                <Double fx:constant="MAX_VALUE" />
                            </maxWidth>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</VBox>