<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.Double?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="5"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.mycompany.controllers.SetBaseListController">
    <padding>
        <Insets top="5" bottom="5" left="5" right="5" />
    </padding>
    <children>
        <Label fx:id="exerciseNameLbl" />
        
        <ListView fx:id="setBaseList" VBox.vgrow="ALWAYS"/>
        
        <VBox spacing="5">
            <children>
                <HBox spacing="5">
                    <children>
                        <Button text="New" onAction="#createNew" HBox.hgrow="ALWAYS">
                            <maxWidth>
                                <Double fx:constant="MAX_VALUE" />
                            </maxWidth>
                        </Button>
                        <Button text="Edit" onAction="#edit" fx:id="editButton" HBox.hgrow="ALWAYS">
                            <maxWidth>
                                <Double fx:constant="MAX_VALUE" />
                            </maxWidth>
                        </Button>
                    </children>
                </HBox>
                
                <HBox spacing="5">
                    <children>
                        <Button text="Save" onAction="#save" fx:id="saveButton" HBox.hgrow="ALWAYS">
                            <maxWidth>
                                <Double fx:constant="MAX_VALUE" />
                            </maxWidth>
                        </Button>
                        <Button text="Cancel" onAction="#cancel" HBox.hgrow="ALWAYS">
                            <maxWidth>
                                <Double fx:constant="MAX_VALUE" />
                            </maxWidth>
                        </Button>
                        <Button text="Remove" onAction="#remove" fx:id="removeButton" HBox.hgrow="ALWAYS">
                            <maxWidth>
                                <Double fx:constant="MAX_VALUE" />
                            </maxWidth>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</VBox>