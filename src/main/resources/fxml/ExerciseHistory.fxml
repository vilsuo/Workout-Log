<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.Double?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:id="root"
      spacing="30"
      fx:controller="com.mycompany.controllers.ExerciseHistoryController">
    <padding>
        <Insets top="10" bottom="10" right="10" left="10" />
    </padding>
    <children>
        <HBox alignment="CENTER" spacing="10">
            <children>
                <GridPane hgap="5" vgap="5" alignment="CENTER">
                    <padding>
                        <Insets top="5" bottom="5" left="5" right="5" />
                    </padding>
                    <columnConstraints>
                        <ColumnConstraints halignment="CENTER" />

                        <ColumnConstraints halignment="CENTER" />
                    </columnConstraints>
                    
                    <Label text="Start Date"
                        GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    
                    <Label text="End date"
                           GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    
                
                    <DatePicker fx:id="startDatePicker" promptText="dd-MM-yyyy" showWeekNumbers="true"
                        GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <DatePicker fx:id="endDatePicker" promptText="dd-MM-yyyy" showWeekNumbers="true"
                        GridPane.columnIndex="1" GridPane.rowIndex="1" />
                </GridPane>
                
                <VBox spacing="5" alignment="CENTER" >
                    <children>
                        <ComboBox fx:id="exerciseCategoryComboBox" promptText="Select category" />
                        
                        <ComboBox fx:id="exerciseNameComboBox" promptText="Select exercise" />
                    </children>
                </VBox>
                
                <Button fx:id="calculateButton" text="Calculate" onAction="#onCalculateButtonPressed" />
            </children>
        </HBox>
        
        <VBox spacing="10" VBox.vgrow="ALWAYS">
            <children>
                <Label fx:id="calculatedExerciseInfoLabel" alignment="CENTER" HBox.hgrow="ALWAYS">
                    <maxWidth>
                        <Double fx:constant="MAX_VALUE" />
                    </maxWidth>
                </Label>
                
                <HBox spacing="10" VBox.vgrow="ALWAYS">
                    <children>
                        <VBox HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="History" alignment="CENTER">
                                    <maxWidth>
                                        <Double fx:constant="MAX_VALUE" />
                                    </maxWidth>
                                </Label>
                                
                                <ListView fx:id="historyListView" VBox.vgrow="ALWAYS" />
                            </children>
                        </VBox>
                        
                        <VBox HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Records" alignment="CENTER">
                                    <maxWidth>
                                        <Double fx:constant="MAX_VALUE" />
                                    </maxWidth>
                                </Label>
                                
                                <TableView fx:id="recordsTableView" VBox.vgrow="ALWAYS">
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                    </columnResizePolicy>
                                    <columns>
                                        <TableColumn fx:id="repetitionsColumn" text="Repetitions">
                                            <cellValueFactory>
                                                <PropertyValueFactory property="repetitions" />
                                            </cellValueFactory>
                                        </TableColumn>
                                        <TableColumn fx:id="weightColumn" text="Weight">
                                            <cellValueFactory>
                                                <PropertyValueFactory property="weight" />
                                            </cellValueFactory>
                                        </TableColumn>
                                        <TableColumn fx:id="dateColumn" text="Date">
                                            <cellValueFactory>
                                                <PropertyValueFactory property="date" />
                                            </cellValueFactory>
                                        </TableColumn>
                                    </columns>
                                </TableView>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</VBox>
