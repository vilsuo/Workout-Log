<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

 <VBox alignment="CENTER" spacing="5"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.mycompany.controllers.ExerciseBaseListController">
    <padding>
        <Insets top="5" bottom="5" left="5" right="5" />
    </padding>
    <children>
        <Label fx:id="dayNameLbl" />
        
        <ListView fx:id="exerciseBaseList" />
        
        <HBox spacing="5">
            <Button text="New..." onAction="#newExerciseBase" />
            <Button text="Edit..." onAction="#editExerciseBase" fx:id="editButton" />
            <Button text="Remove..." onAction="#removeExerciseBase" fx:id="removeButton" />
        </HBox>
    </children>
</VBox>
