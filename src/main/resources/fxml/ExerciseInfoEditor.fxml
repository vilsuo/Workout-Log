<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.Double?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="5"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.mycompany.controllers.ExerciseInfoEditorController">
    <padding>
        <Insets top="5" bottom="5" left="5" right="5" />
    </padding>
    <children>
        <TableView fx:id="exerciseInfoTV" editable="true" VBox.vgrow="ALWAYS">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <columns>
                <TableColumn fx:id="nameColumn" text="Name">
                    <cellValueFactory>
                        <PropertyValueFactory property="name" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="categoryColumn" text="Category">
                    <cellValueFactory>
                        <PropertyValueFactory property="category" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
        
        <HBox spacing="20">
            <children>
                <HBox spacing="5" HBox.hgrow="ALWAYS">
                    <children>
                        <TextField fx:id="nameTF" promptText="name" HBox.hgrow="ALWAYS">
                            <maxWidth>
                                <Double fx:constant="MAX_VALUE" />
                            </maxWidth>
                        </TextField>
                        <TextField fx:id="categoryTF" promptText="category" HBox.hgrow="ALWAYS">
                            <maxWidth>
                                <Double fx:constant="MAX_VALUE" />
                            </maxWidth>
                        </TextField>
                        <Button fx:id="addButton" onAction="#add" text="Add"
                            minWidth="60" prefWidth="60" maxWidth="60" />
                    </children>
                </HBox>
                
                <Button fx:id="deleteButton" onAction="#delete" text="Delete"
                    minWidth="60" prefWidth="60" maxWidth="60" />
            </children>
        </HBox>
    </children>
</VBox>
