<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="5"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.mycompany.controllers.ExerciseInfoEditorController">
    <padding>
        <Insets top="5" bottom="5" left="5" right="5" />
    </padding>
    <children>
        <TableView fx:id="exerciseInfoTV" editable="true">
            <columns>
                <TableColumn fx:id="nameColumn" text="name">
                    <cellValueFactory>
                        <PropertyValueFactory property="name" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="categoryColumn" text="category">
                    <cellValueFactory>
                        <PropertyValueFactory property="category" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
        
        <HBox spacing="5">
            <children>
                <TextField fx:id="nameTF" promptText="name" />
                <TextField fx:id="categoryTF" promptText="category" />
                <Button fx:id="addButton" onAction="#add" text="Add" />
            </children>
        </HBox>
        
        
        <Button text="list all" onAction="#list" />
    </children>
</VBox>
